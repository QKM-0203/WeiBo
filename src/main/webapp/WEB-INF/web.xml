<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <filter>
        <filter-name>CharacterFilter</filter-name>
        <filter-class>WeiBo.Filter.CharacterFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>CharacterFilter</filter-name>
        <servlet-name>updateInformationServlet</servlet-name>
        <servlet-name>PageServlet</servlet-name>
        <servlet-name>addBossServlet</servlet-name>
        <servlet-name>findInformationServlet</servlet-name>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-name>addBlogServlet</servlet-name>
        <servlet-name>findBlogServlet</servlet-name>
        <servlet-name>deleteBlogServlet</servlet-name>
        <servlet-name>addCommentServlet</servlet-name>
        <servlet-name>deleteCommentServlet</servlet-name>
        <servlet-name>deleteAttentionServlet</servlet-name>
        <servlet-name>addAttentionServlet</servlet-name>
    </filter-mapping>



</web-app>
